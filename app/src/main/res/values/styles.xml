<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StandardTextStyle">
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <style name="SignTextStyle" parent="StandardTextStyle">
        <item name="android:hint">Sign Here</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
